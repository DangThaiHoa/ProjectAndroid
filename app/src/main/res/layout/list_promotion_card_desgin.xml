<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/Detail_promotion"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_card_list_product"
                android:alpha="0.5"
                app:tint="#77000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/bg_card_list_product"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_Promotion"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/image_test"
            android:padding="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="120dp">

            <TextView
                android:id="@+id/Txv_PercentPromotion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Phần Trăm Giảm"
                android:textSize="17sp"
                android:gravity="bottom"
                android:fontFamily="@font/muli_black"
                android:textAllCaps="true"
                android:paddingBottom="7dp"
                android:textColor="#000"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lb_startDayPromotion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ngày Bắt Đầu :"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        android:textColor="#A6A6A6"
                        android:layout_marginRight="7dp"/>

                    <TextView
                        android:id="@+id/Txv_startDayPromotion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="22/10/2022"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        android:textColor="#A6A6A6"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lb_endDayPromotion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ngày Kết Thúc :"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        android:textColor="#A6A6A6"
                        android:layout_marginRight="7dp"/>

                    <TextView
                        android:id="@+id/Txv_endDayPromotion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="22/10/2022"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        android:textColor="#A6A6A6"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>