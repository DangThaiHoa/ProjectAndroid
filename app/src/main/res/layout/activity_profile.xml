<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.Profile.Profile"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hồ Sơ"
            android:fontFamily="@font/muli_black"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/Layout_image_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="9dp"
            android:layout_centerHorizontal="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_Image_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/Image_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image_test"
                    android:background="@color/white"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginLeft="110dp"
        android:layout_alignLeft="@+id/Layout_image_profile">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="100dp"
            android:elevation="10dp"
            app:cardBackgroundColor="@color/mainColor"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_gravity="center"/>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        
        <TextView
            android:id="@+id/text_name_Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QuafBanhMi"
            android:fontFamily="@font/muli_black"
            android:textSize="30sp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/text_email_Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_name_Profile"
            android:layout_centerInParent="true"
            android:text="quafbanhmi@gmail.com"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_button_Edit_profile"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/text_email_Profile"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/mainColor"
            app:cardCornerRadius="50dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Chỉnh Sửa"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="#00000000"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>